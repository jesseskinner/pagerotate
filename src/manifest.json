{
  "manifest_version": 2,
  "name": "Page Rotate",
  "version": "0.1",
  "description": "Rotate any web page with the click of a button.",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches" : [
        "http://*/*",
        "https://*/*"
      ],
      "js" : ["pagerotate.js", "contentscript.js"],
      "run_at" : "document_idle",
      "all_frames" : false
    }
  ],

  "page_action": {
    "default_icon": {
      "19": "icons/19.png",
      "38": "icons/38.png"
    },
    "default_title": "Page Rotate"
  }
}